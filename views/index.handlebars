<h1>How-Bout_Dat Burger</h1>
<hr>
<h2>Time to Eat</h2>
<hr>
<div class="container">
	<div class="row">
		<div class="col-md-4 toEat">
			<h3>Burgers to Eat</h3>

			{{#each burgers}}
			{{#unless this.devoured}}

		  	   <p>{{this.id}}: {{this.burger_name}}</p>

		  	<div>
		  	   <!-- Form to delete the burger. The post will send the burger's id to the server -->
				<form action="/delete/{{this.id}}" method="POST">
					<input type="hidden" name="id" value="{{this.id}}">
					<button type="submit">Devour</button>
				</form>
		  	</div>

		  	{{/unless}}
			{{/each}}

		</div>

		<div class="col-md-4 order">
			<form action="/" method="POST">
			<textarea type="text" name="newestBurger"></textarea><br>
			<button type="submit">Order</button>
			</form>
		</div>

		<div class="col-md-4 devoured">
			<h3>Eaten</h3>
			{{#each burgers}}
			{{#if this.devoured}}
			
				<p>{{this.id}}: {{this.burger_name}}</p>
			
			{{/if}}
			{{/each}}	
		</div>
	</div>
</div>